CXX          = @CXX@
FLAGS        = -std=c++0x @PYTHON_CPPFLAGS@ -I ./
CFLAGS       = -fPIC -shared @MYSQL_CFLAGS@
LIBS         = @LIBS@ @PYTHON_LDFLAGS@ @MYSQL_LDFLAGS@

TARGET  = mysql.so
SOURCES = mysql.cpp mysql_mod.cpp

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CXX) $(CFLAGS) $(SOURCES) $(CFLAGS) -o $(TARGET) $(FLAGS) $(LIBS)
	mv $(TARGET) ../../
