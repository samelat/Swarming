{
    "version":1,
    "formatters":{
        "simple_format" : {
            "class"  : "logging.Formatter",
            "format" : "[%(asctime)s] (%(name)s) %(levelname)s - %(msg)s"
        }
    },

    "handlers":{
        "console" : {
            "class" : "logging.StreamHandler",
            "formatter" : "simple_format",
            "level":"ERROR"
        },

        "main_log_file": {
            "class" : "logging.handlers.RotatingFileHandler",
            "filename": "log/main.log",
            "maxBytes":500000,
            "backupCount":5,
            "formatter": "simple_format"
        },

        "debug_log_file": {
            "class" : "logging.FileHandler",
            "filename": "debug.log",
            "formatter": "simple_format",
            "level":"DEBUG"
        }
    },

    "loggers" : {

        "unit" : {
            "handlers" : ["main_log_file"],
            "level":"DEBUG",
            "propagate":true
        },

        "core" : {
            "handlers" : ["main_log_file"],
            "level":"DEBUG",
            "propagate":true
        }
    },

    "root" : {
        "handlers" : ["console"]
    }
}